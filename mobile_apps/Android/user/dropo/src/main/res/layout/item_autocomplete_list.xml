<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?appThemeScreenBackgroundStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dimen_app_edit_text_padding">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:srcCompat="@drawable/ic_location_on_gray_24dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.dropo.component.CustomFontTextView
            android:id="@+id/tvPlaceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_app_edit_text_padding"
            android:text="@string/app_name"
            android:textAlignment="viewStart"
            android:textSize="@dimen/size_app_text_regular" />

        <com.dropo.component.CustomFontTextView
            android:id="@+id/tvPlaceAddress"
            style="?appThemeLabelTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_app_edit_text_padding"
            android:text="@string/app_name"
            android:textAlignment="viewStart"
            android:textSize="@dimen/size_app_label_small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_app_horizontal_divider"
            android:layout_marginTop="@dimen/dimen_app_edit_text_padding"
            android:background="?appThemeDividerColor" />
    </LinearLayout>
</LinearLayout>