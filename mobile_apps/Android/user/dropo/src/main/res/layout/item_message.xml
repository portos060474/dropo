<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llReceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/selector_round_chet_green"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <com.dropo.component.CustomFontTextView
            android:id="@+id/tvReceiveMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:text="Hiahsdgjhagdjagdhjagsdajsgdjadghjagsdasdjhgjhagsdgahgsdjhasgdjhasgd"
            android:textColor="@color/color_app_text_light"
            android:textSize="@dimen/size_app_text_medium" />

        <com.dropo.component.CustomFontTextView
            android:id="@+id/tvReceiveTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="@color/color_app_label"
            android:textSize="11dp"
            tools:text="22-03-2019, 20:22" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="55dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/selector_round_chet_blue"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">


        <com.dropo.component.CustomFontTextView
            android:id="@+id/tvSentMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:text="Hiahsdgjhagdjagdhjagsdajsgdjadghjagsdasdjhgjhagsdgahgsdjhasgdjhasgd"
            android:textColor="@color/color_app_text_light"
            android:textSize="@dimen/size_app_text_medium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.dropo.component.CustomFontTextView
                android:id="@+id/tvSentTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_app_label"
                android:textSize="11dp"
                tools:text="22-03-2019, 20:22" />

            <com.dropo.component.CustomFontTextView
                android:id="@+id/tvRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:textColor="@color/color_app_label"
                android:textSize="11dp"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>