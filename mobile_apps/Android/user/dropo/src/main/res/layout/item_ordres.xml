<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.dropo.component.CustomFontTextViewTitle
            android:id="@+id/tvOrderDate"
            style="?appThemeLabelTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/activity_horizontal_padding"
            android:layout_toStartOf="@id/tvOrderType"
            android:maxLines="2"
            android:textAlignment="viewStart"
            android:textSize="@dimen/size_app_label_regular"
            tools:text="12 Feb 2021, 02:15 AM" />

        <com.dropo.component.CustomFontTextViewTitle
            android:id="@+id/tvOrderType"
            style="?appThemeLabelTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/activity_horizontal_padding"
            android:layout_marginTop="@dimen/activity_horizontal_padding"
            android:maxLines="2"
            android:text="@string/text_courier"
            android:textAlignment="viewStart"
            android:textSize="@dimen/size_app_label_regular" />

    </RelativeLayout>

    <com.dropo.component.CustomFontTextViewTitle
        android:id="@+id/tvOrderNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_app_edit_text_padding"
        android:gravity="start"
        android:maxLines="2"
        android:textSize="@dimen/size_app_text_medium"
        tools:text="@string/text_order_number" />

    <com.dropo.component.CustomFontTextViewTitle
        android:id="@+id/tvStoreName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_app_edit_text_padding"
        android:gravity="start"
        android:maxLines="2"
        android:textSize="@dimen/size_app_text_medium"
        tools:text="Fortune hotel" />

    <com.dropo.component.CustomFontTextView
        android:id="@+id/tvOrderStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_padding"
        android:gravity="start"
        android:textColor="@color/color_app_headings"
        android:textSize="@dimen/size_app_label_regular"
        tools:text="@string/text_order_details" />

    <include
        android:id="@+id/divHistory"
        layout="@layout/layout_divider_horizontal" />

</LinearLayout>


