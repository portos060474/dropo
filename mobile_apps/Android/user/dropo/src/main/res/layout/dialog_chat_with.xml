<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/bottom_sheet_dialog_padding_20dp"
    android:paddingTop="@dimen/bottom_sheet_dialog_padding_30dp"
    android:paddingEnd="@dimen/bottom_sheet_dialog_padding_20dp"
    android:paddingBottom="@dimen/bottom_sheet_dialog_padding_30dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.dropo.component.CustomFontTextViewTitle
            android:id="@+id/tvTitle"
            style="?appThemeTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_padding"
            android:layout_weight="1"
            android:text="@string/text_chat"
            android:textSize="@dimen/size_app_text_large"
            app:typefaceTv="fonts/AvenirLTStd-Medium.otf" />

        <com.dropo.component.CustomImageView
            android:id="@+id/btnNegative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dimen_app_edit_text_padding"
            android:paddingTop="@dimen/dimen_app_edit_text_padding"
            android:paddingBottom="@dimen/dimen_app_edit_text_padding"
            android:src="@drawable/ic_cross" />
    </LinearLayout>

    <com.dropo.component.CustomFontTextView
        android:id="@+id/tvChatWithAdmin"
        style="?appThemeTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_padding"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:padding="@dimen/activity_horizontal_padding"
        android:text="@string/text_chat_with_admin"
        android:textSize="@dimen/size_app_text_medium"
        android:visibility="gone"
        app:drawableLeftCompat="@drawable/ic_admin"
        app:typefaceTv="fonts/AvenirLTStd-Medium.otf" />

    <com.dropo.component.CustomFontTextView
        android:id="@+id/tvChatWithStore"
        style="?appThemeTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_padding"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:padding="@dimen/activity_horizontal_padding"
        android:text="@string/text_chat_with_store"
        android:textSize="@dimen/size_app_text_medium"
        app:drawableLeftCompat="@drawable/ic_sub_store"
        app:typefaceTv="fonts/AvenirLTStd-Medium.otf" />

    <com.dropo.component.CustomFontTextView
        android:id="@+id/tvChatWithDeliveryMan"
        style="?appThemeTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_padding"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:padding="@dimen/activity_horizontal_padding"
        android:text="@string/text_chat_with_deliveryman"
        android:textSize="@dimen/size_app_text_medium"
        app:drawableLeftCompat="@drawable/ic_deliveryman"
        app:typefaceTv="fonts/AvenirLTStd-Medium.otf" />

</LinearLayout>