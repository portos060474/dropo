<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin">

    <com.dropo.component.CustomFontTextView
        android:id="@+id/tvNotificationMsg"
        style="?appThemeTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_app_text_padding"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/dimen_app_text_padding"
        android:gravity="start"
        android:text="Message"
        android:textSize="@dimen/size_app_text_regular" />

    <com.dropo.component.CustomFontTextView
        android:id="@+id/tvNotificationDate"
        style="?appThemeLabelTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_app_text_padding"
        android:layout_marginTop="@dimen/dimen_app_edit_text_padding"
        android:layout_marginEnd="@dimen/dimen_app_text_padding"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:gravity="start"
        android:text="18 jul 2020 12:14 pm"
        android:textSize="@dimen/size_app_text_small" />

    <View
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_app_horizontal_divider"
        android:background="?appThemeDividerColor" />
</LinearLayout>