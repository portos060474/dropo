<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:theme="@style/AppTheme">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/dialogImageViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="@string/transition_string_store_product"
        app:layout_collapseMode="parallax" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        app:layout_collapseMode="parallax">

        <View
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

        <LinearLayout
            android:id="@+id/llDotsDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/activity_horizontal_padding"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible" />
    </FrameLayout>

    <com.dropo.provider.component.CustomImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/activity_vertical_padding"
        android:paddingStart="@dimen/dimen_app_edit_text_padding"
        android:paddingTop="@dimen/dimen_app_edit_text_padding"
        android:paddingEnd="@dimen/dimen_app_edit_text_padding"
        android:paddingBottom="@dimen/dimen_app_edit_text_padding"
        android:src="@drawable/ic_cross" />
</FrameLayout>