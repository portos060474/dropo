    <style name="CustomTabStyleLight" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/color_app_heading</item>
        <item name="tabIndicatorHeight">@dimen/app_tab_indicator_height</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/color_app_text_light</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@color/color_app_bg_light</item>
        <item name="tabTextAppearance">@style/TabTextAppearanceLight</item>
    </style>

    <style name="TabTextAppearanceLight" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/size_app_text_regular</item>
        <item name="android:textColor">@color/color_app_label_dark</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="DatePickerLight" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color_app_bg_dark
        </item>                   <!--header background-->
        <item name="android:windowBackground">@color/color_app_bg_light
        </item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/color_app_text_light
        </item> <!--selected day-->
        <item name="android:textColorPrimary">@color/color_app_text_light
        </item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/color_app_text_light
        </item>    <!--days of the week-->
        <item name="android:textColor">@color/color_app_text_light</item>
    </style>

