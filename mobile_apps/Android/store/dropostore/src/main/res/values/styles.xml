<resources>

    <!-- Base application theme. -->


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/color_app_status_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--  <item name="android:editTextStyle">@style/CustomEditText</item>
          <item name="android:textViewStyle">@style/CustomTextViewStyle</item>-->

    </style>


    <!--//////////////////////////////////////////////////////////////////////////////////-->
    <!--App Light Theme -->
    <!--//////////////////////////////////////////////////////////////////////////////////-->

    <style name="Theme.App.Light" parent="AppTheme">
        <item name="appThemeScreenBackgroundStyle">@style/AppBackgroundLight</item>
        <item name="android:editTextStyle">@style/CustomEditTextLight</item>
        <item name="android:textViewStyle">@style/CustomTextViewLight</item>
        <item name="appThemeTextViewStyle">@style/CustomTextViewLight</item>
        <item name="android:buttonStyle">@style/CustomButtonLight</item>
        <item name="appThemeButtonStyle">@style/CustomButtonLight</item>
        <item name="appThemeTextInputLayoutStyle">@style/CustomTextInputLayoutLight</item>
        <item name="appThemeLabelTextStyle">@style/CustomTextViewLabelLight</item>
        <item name="appThemeBottomLineDividerStyle">@style/AppCustomBottomLineDividerLight</item>
        <item name="appThemeEditTextStyle">@style/CustomEditTextDark</item>
        <item name="appThemeIcon">@color/color_app_icon_light</item>
        <item name="appThemeDialogBackgroundStyle">@color/color_app_bg_light</item>
        <item name="appThemeModeColor">@color/color_app_bg_light</item>
        <item name="appThemeCheckBoxStyle">@style/CustomCheckBoxLight</item>
        <item name="appThemeRadioButtonStyle">@style/CustomRadioButtonLight</item>
        <item name="appThemeSwitchStyle">@style/CustomSwitchLight</item>
        <item name="appThemeTabStyle">@style/CustomTabStyleLight</item>
        <item name="appThemeTagStyle">@color/color_app_tag_light</item>
        <item name="appThemeDividerColor">@color/color_app_divider_light</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerLight</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerLight</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/color_app_bg_light</item>
        <item name="android:navigationBarColor">@color/color_app_bg_light</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!--        <item name="android:navigationBarDividerColor">?appThemeTagStyle</item>-->
        <item name="android:windowBackground">@color/color_app_bg_light</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogThemeLight</item>


