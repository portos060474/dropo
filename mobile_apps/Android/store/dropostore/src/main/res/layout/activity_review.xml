<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?appThemeScreenBackgroundStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dropo.store.ReviewActivity">

    <include layout="@layout/include_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/activity_horizontal_padding">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_weight="0.35"
                android:gravity="center"
                android:orientation="vertical">

                <com.dropo.store.widgets.CustomTextView
                    android:id="@+id/tvReviewAverage"
                    style="?appThemeButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_bg_rating"
                    android:gravity="center"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:text="0.0"
                    android:textSize="@dimen/size_app_text_largest"
                    app:appBackgroundColor="@integer/appThemeColor" />

                <com.dropo.store.widgets.CustomRatingBar
                    android:id="@+id/ratingBar"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_padding"
                    android:layout_marginBottom="3dp"
                    android:numStars="5"
                    app:appRatingBarColor="@integer/appThemeColor" />
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                app:cardBackgroundColor="?appThemeModeColor"
                app:cardCornerRadius="@dimen/app_card_radius"
                app:cardElevation="@dimen/app_card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_padding"
                    android:layout_marginBottom="@dimen/activity_horizontal_padding"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_padding"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.dropo.store.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawablePadding="@dimen/dimen_app_edit_text_padding"
                            android:text="5"
                            android:textSize="@dimen/size_app_text_regular"
                            app:drawableRightCompat="@drawable/ic_star2_small" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_horizontal_padding"
                            android:layout_marginEnd="@dimen/activity_horizontal_padding"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.dropo.store.widgets.CustomProgressBar
                                android:id="@+id/bar5Star"
                                style="@style/CustomProgressBarHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_weight="1"
                                android:max="100"
                                android:progressBackgroundTint="?appThemeModeColor"
                                app:appProgressBarColor="@integer/appThemeColor" />

                            <com.dropo.store.widgets.CustomTextView
                                android:id="@+id/tv5StarCount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/activity_horizontal_padding"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="@dimen/size_app_text_regular" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_padding"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.dropo.store.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dimen_app_edit_text_padding"
                            android:text="4"
                            android:textSize="@dimen/size_app_text_regular"
                            app:drawableRightCompat="@drawable/ic_star2_small" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_horizontal_padding"
                            android:layout_marginEnd="@dimen/activity_horizontal_padding"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.dropo.store.widgets.CustomProgressBar
                                android:id="@+id/bar4Star"
                                style="@style/CustomProgressBarHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_weight="1"
                                android:max="90"
                                android:progressBackgroundTint="?appThemeModeColor"
                                app:appProgressBarColor="@integer/appThemeColor" />

                            <com.dropo.store.widgets.CustomTextView
                                android:id="@+id/tv4StarCount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/activity_horizontal_padding"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="@dimen/size_app_text_regular" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_padding"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.dropo.store.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dimen_app_edit_text_padding"
                            android:text="3"
                            android:textSize="@dimen/size_app_text_regular"
                            app:drawableRightCompat="@drawable/ic_star2_small" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_horizontal_padding"
                            android:layout_marginEnd="@dimen/activity_horizontal_padding"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.dropo.store.widgets.CustomProgressBar
                                android:id="@+id/bar3Star"
                                style="@style/CustomProgressBarHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_weight="1"
                                android:max="100"
                                android:progressBackgroundTint="?appThemeModeColor"
                                app:appProgressBarColor="@integer/appThemeColor" />

                            <com.dropo.store.widgets.CustomTextView
                                android:id="@+id/tv3StarCount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/activity_horizontal_padding"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="@dimen/size_app_text_regular" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_padding"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.dropo.store.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dimen_app_edit_text_padding"
                            android:text="2"
                            android:textSize="@dimen/size_app_text_regular"
                            app:drawableRightCompat="@drawable/ic_star2_small" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_horizontal_padding"
                            android:layout_marginEnd="@dimen/activity_horizontal_padding"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.dropo.store.widgets.CustomProgressBar
                                android:id="@+id/bar2Star"
                                style="@style/CustomProgressBarHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_weight="1"
                                android:max="100"
                                android:progressBackgroundTint="?appThemeModeColor"
                                app:appProgressBarColor="@integer/appThemeColor" />

                            <com.dropo.store.widgets.CustomTextView
                                android:id="@+id/tv2StarCount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/activity_horizontal_padding"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="@dimen/size_app_text_regular" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_padding"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.dropo.store.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dimen_app_edit_text_padding"
                            android:text="1"
                            android:textSize="@dimen/size_app_text_regular"
                            app:drawableRightCompat="@drawable/ic_star2_small" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_horizontal_padding"
                            android:layout_marginEnd="@dimen/activity_horizontal_padding"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.dropo.store.widgets.CustomProgressBar
                                android:id="@+id/bar1Star"
                                style="@style/CustomProgressBarHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_weight="1"
                                android:max="100"
                                android:progressBackgroundTint="?appThemeModeColor"
                                app:appProgressBarColor="@integer/appThemeColor" />

                            <com.dropo.store.widgets.CustomTextView
                                android:id="@+id/tv1StarCount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/activity_horizontal_padding"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="@dimen/size_app_text_regular" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvPublicReview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            tools:listitem="@layout/item_review_2" />
    </LinearLayout>
</LinearLayout>
