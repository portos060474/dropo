<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:visibility="visible"
        app:cardBackgroundColor="?appThemeModeColor"
        app:cardCornerRadius="@dimen/app_card_radius"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/ivProduct"
            android:layout_width="@dimen/img_size"
            android:layout_height="@dimen/img_size"
            android:contentDescription="@string/text_image"
            android:scaleType="centerCrop" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/dimen_app_edit_text_padding"
            app:cardBackgroundColor="@color/color_app_tag_light"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp">

            <com.dropo.store.widgets.CustomImageView
                android:id="@+id/itemImageDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:src="@drawable/ic_cross" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivAddImage"
        android:layout_width="@dimen/img_size"
        android:layout_height="@dimen/img_size"
        android:layout_margin="4dp"
        android:padding="@dimen/bottom_sheet_dialog_padding_20dp"
        android:src="@drawable/ic_add_image" />
</LinearLayout>