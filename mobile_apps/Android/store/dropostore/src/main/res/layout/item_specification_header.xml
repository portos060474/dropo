<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/dimen_app_edit_text_padding"
    android:background="@drawable/shape_bg_specification"
    android:paddingStart="@dimen/activity_horizontal_padding"
    android:paddingTop="@dimen/dimen_app_edit_text_padding"
    android:paddingEnd="@dimen/activity_horizontal_padding"
    android:paddingBottom="@dimen/dimen_app_edit_text_padding">

    <com.dropo.store.widgets.CustomTextView
        android:id="@+id/tvRequired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="*"
        android:textColor="@android:color/holo_red_light"
        android:textSize="@dimen/size_app_label_regular"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.dropo.store.widgets.CustomTextView
            android:id="@+id/tvSpecificationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Pizza"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textSize="@dimen/size_app_text_small" />


        <com.dropo.store.widgets.CustomTextView
            android:id="@+id/tvChooseUpTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="(choose up to 3)"
            android:textAlignment="viewStart"
            android:textSize="@dimen/size_app_text_small" />

    </LinearLayout>


</LinearLayout>
