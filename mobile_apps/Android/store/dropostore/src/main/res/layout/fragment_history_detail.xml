<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?appThemeScreenBackgroundStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_horizontal_padding"
    tools:context="com.dropo.store.HistoryDetailActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/card_view_space_12dp"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    app:cardBackgroundColor="?appThemeModeColor"
                    app:cardCornerRadius="@dimen/app_card_radius"
                    app:cardElevation="@dimen/app_card_elevation">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_horizontal_padding"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/activity_horizontal_padding">

                        <com.dropo.store.widgets.CustomTextView
                            style="?appThemeLabelTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_created"
                            android:textSize="@dimen/size_app_text_small" />

                        <com.dropo.store.widgets.CustomTextView
                            android:id="@+id/tvCreatedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/text_default"
                            android:textSize="@dimen/size_app_text_regular" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    app:cardBackgroundColor="?appThemeModeColor"
                    app:cardCornerRadius="@dimen/app_card_radius"
                    app:cardElevation="@dimen/app_card_elevation">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_horizontal_padding"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/activity_horizontal_padding">

                        <com.dropo.store.widgets.CustomTextView
                            style="?appThemeLabelTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_delivered"
                            android:textSize="@dimen/size_app_text_small" />

                        <com.dropo.store.widgets.CustomTextView
                            android:id="@+id/tvDeliveredDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/text_default"
                            android:textSize="@dimen/size_app_text_regular" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <com.dropo.store.widgets.CustomTextView
                style="?appThemeTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_padding"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:background="@drawable/shape_bg_specification"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_horizontal_padding"
                android:paddingTop="5dp"
                android:paddingEnd="@dimen/activity_horizontal_padding"
                android:paddingBottom="5dp"
                android:text="@string/text_order_details"
                android:textAllCaps="true"
                android:textSize="@dimen/size_app_text_small"
                app:typefaceTv="fonts/AvenirLTStd-Medium.otf" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                app:cardBackgroundColor="?appThemeModeColor"
                app:cardCornerRadius="@dimen/app_card_radius"
                app:cardElevation="@dimen/app_card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/activity_horizontal_padding">


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/ivClientHistory"
                        android:layout_width="@dimen/btn_height"
                        android:layout_height="@dimen/btn_height"
                        android:scaleType="centerCrop"
                        app:riv_oval="true" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/dimen_app_edit_text_padding"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.dropo.store.widgets.CustomFontTextViewTitle
                            android:id="@+id/tvClientNameHistory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_app_edit_text_padding"
                            android:layout_marginBottom="@dimen/dimen_app_edit_text_padding"
                            android:maxLines="2"
                            android:text="@string/text_default"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/size_app_text_medium" />

                        <LinearLayout
                            android:id="@+id/llOrderReceiveBy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <com.dropo.store.widgets.CustomTextView
                                style="?appThemeLabelTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="@string/text_order_receive_by"
                                android:textSize="@dimen/size_app_text_small" />


                            <com.dropo.store.widgets.CustomFontTextViewTitle
                                android:id="@+id/tvOrderReceiverName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:gravity="start"
                                android:maxLines="2"
                                android:text="Cher"
                                android:textAlignment="viewStart"
                                android:textSize="@dimen/size_app_label_regular" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llRateUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.dropo.store.widgets.CustomImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_review" />

                        <com.dropo.store.widgets.CustomTextView
                            android:id="@+id/tvUserRatings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_app_edit_text_padding"
                            android:gravity="end|fill_vertical"
                            android:maxLines="1"
                            android:text="@string/text_give_rate"
                            android:textSize="@dimen/size_app_text_small"
                            android:visibility="gone"
                            app:appTextColor="@integer/appThemeColor" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.dropo.store.widgets.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingTop="@dimen/general_medium_margin"
                android:text="@string/text_total"
                android:textColor="@color/color_app_label"
                android:textSize="@dimen/size_app_text_medium"
                android:visibility="gone" />

            <com.dropo.store.widgets.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/color_app_text_light"
                android:textSize="@dimen/size_app_text_large"
                android:visibility="gone" />


            <com.dropo.store.widgets.CustomTextView
                android:id="@+id/tvTagDeliveryDetails"
                style="?appThemeTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_padding"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:background="@drawable/shape_bg_specification"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_horizontal_padding"
                android:paddingTop="5dp"
                android:paddingEnd="@dimen/activity_horizontal_padding"
                android:paddingBottom="5dp"
                android:text="@string/text_delivery_details"
                android:textAllCaps="true"
                android:textSize="@dimen/size_app_text_small"
                app:typefaceTv="fonts/AvenirLTStd-Medium.otf" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/card_view_space_6dp"
                app:cardBackgroundColor="?appThemeModeColor"
                app:cardCornerRadius="@dimen/app_card_radius"
                app:cardElevation="@dimen/app_card_elevation">

                <LinearLayout
                    android:id="@+id/llDriverDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/activity_horizontal_padding">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/ivProviderHistory"
                        android:layout_width="@dimen/btn_height"
                        android:layout_height="@dimen/btn_height"
                        android:scaleType="centerCrop"
                        app:riv_oval="true" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/dimen_app_edit_text_padding"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.dropo.store.widgets.CustomFontTextViewTitle
                            android:id="@+id/tvProviderNameHistory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_app_edit_text_padding"
                            android:layout_marginBottom="@dimen/dimen_app_edit_text_padding"
                            android:maxLines="2"
                            android:text="@string/text_delivery_man"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/size_app_text_medium" />

                        <com.dropo.store.widgets.CustomTextView
                            android:id="@+id/tvAddressHistory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/text_address"
                            android:textSize="@dimen/size_app_label_regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llRateProvider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.dropo.store.widgets.CustomImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_review" />

                        <com.dropo.store.widgets.CustomTextView
                            android:id="@+id/tvProviderRatings"
                            style="?appThemeLabelTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_app_edit_text_padding"
                            android:drawablePadding="@dimen/dimen_app_edit_text_padding"
                            android:gravity="end|fill_vertical"
                            android:maxLines="1"
                            android:text="@string/text_give_rate"
                            android:textSize="@dimen/size_app_label_small"
                            android:visibility="gone"
                            app:appTextColor="@integer/appThemeColor" />
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/llDeliveryTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/card_view_space_6dp"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    app:cardBackgroundColor="?appThemeModeColor"
                    app:cardCornerRadius="@dimen/app_card_radius"
                    app:cardElevation="@dimen/app_card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_horizontal_padding"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/activity_horizontal_padding">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/activity_horizontal_margin"
                            android:src="@drawable/ic_wall_clock" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:orientation="vertical">

                            <com.dropo.store.widgets.CustomTextView
                                style="?appThemeLabelTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="@string/text_time_h_m"
                                android:textSize="@dimen/size_app_label_regular" />

                            <com.dropo.store.widgets.CustomTextView
                                android:id="@+id/tvTimeHistory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="@string/text_time_h_m"
                                android:textSize="@dimen/size_app_text_regular" />


                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/card_view_space_12dp"
                    android:layout_marginTop="@dimen/card_view_space_6dp"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    app:cardBackgroundColor="?appThemeModeColor"
                    app:cardCornerRadius="@dimen/app_card_radius"
                    app:cardElevation="@dimen/app_card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_horizontal_padding"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/activity_horizontal_padding">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/activity_horizontal_margin"
                            android:src="@drawable/ic_route" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:orientation="vertical">

                            <com.dropo.store.widgets.CustomTextView
                                style="?appThemeLabelTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="@string/text_distance"
                                android:textSize="@dimen/size_app_label_regular" />

                            <com.dropo.store.widgets.CustomTextView
                                android:id="@+id/tvDistanceHistory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="@string/text_time_h_m"
                                android:textSize="@dimen/size_app_text_regular" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>
